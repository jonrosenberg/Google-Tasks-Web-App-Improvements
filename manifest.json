{
  "name": "Google Tasks Improvements",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Adds coloring onto tasks, based on keywords",
  "icons": {
    "128": "128.png",
    "default_icon": "128.png"
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["https://mail.google.com/tasks/ig"],
      "js": ["jquery-1.7.2.min.js", "mutation_summary.js", "google-tasks-improvements.js"]
    }
  ],
  "web_accessible_resources": [
    "iframe.css"
  ]
}
